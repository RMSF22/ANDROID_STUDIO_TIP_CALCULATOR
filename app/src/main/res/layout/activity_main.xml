<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ramonsantos.tipcalculator.MainActivity">


    <EditText
        android:id="@+id/editText_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="@dimen/padding_textView_default"
        android:layout_row="0"
        android:ems="18"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/padding_textView_default"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="@dimen/padding_textView_default"
        android:layout_row="0"
        android:background="@color/backgroundBillAmount"
        android:hint="@string/textView_billAmountHint"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="@dimen/padding_textView_default"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seek_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:padding="@dimen/padding_textView_default"
        android:layout_marginRight="93dp"
        />

    <TextView
        android:id="@+id/percent_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:padding="@dimen/padding_textView_default"
        android:text="@string/seekBarPercent"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tip_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:padding="@dimen/padding_textView_default"
        android:text="@string/tiplabel"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="@dimen/padding_textView_default"
        android:layout_row="3"
        android:padding="@dimen/padding_textView_default"
        android:text="@string/totalLabel"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/tip_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="@dimen/padding_textView_default"
        android:layout_marginRight="@dimen/padding_textView_default"
        android:layout_row="2"
        android:background="@color/tipAmountViewColor"
        android:padding="@dimen/padding_textView_default"
        android:text="@string/tipamountview"

        />

    <TextView
        android:id="@+id/total_Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="@dimen/padding_textView_default"
        android:layout_marginRight="@dimen/padding_textView_default"
        android:layout_marginTop="@dimen/padding_textView_default"
        android:layout_row="3"
        android:background="@color/totalViewColor"
        android:padding="@dimen/padding_textView_default"
        android:text="@string/totalAmount"

        />

</GridLayout>
